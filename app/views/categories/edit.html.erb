<h1>Edit the Category</h1>

<% if @category.errors.any? %>
    <h2>The following errors prevented the User from being created</h2>
    <ul>
        <% @category.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with(model: @category, local: true ) do |f| %>

    <p>
        <%= f.label :name %><br/>
        <%= f.text_field :name %>
    </p>

    <p>
        <%= f.submit %>
    </p>

<% end %>