<h1>Listing all Alpha Bloggers</h1>

<%= will_paginate @users %>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th> User name </th>
            <th colspan="2">Actions</th>
            
        </tr>
    <thead>
     <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= link_to gravatar_for(user), user_path(user) %></td>
                <td><%= pluralize(user.articles.count, "article") %></td>
                <td style="text-align:center"><%= link_to user.username, user_path(user) %></td>
                <td><%= link_to 'View', user_path(user) %></td>
                <% if logged_in? && user == current_user %>
                    <td><%= link_to 'Edit Profile', edit_user_path(user) %></td>
                <% end %>
                
            </tr>      
        <% end %>
    </tbody>


</table>


<%= will_paginate @users %>